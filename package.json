{
  "name": "threejs-particle-waypoint",
  "version": "0.6.1",
  "description": "Particle waypoint module for three.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": "https://MasatoMakino@github.com/MasatoMakino/threejs-particle-waypoint.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/three": "^0.134.0",
    "gulptask-demo-page": "MasatoMakino/gulptask-demo-page",
    "gulptask-dev-server": "MasatoMakino/gulptask-dev-server",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "three": "^0.134.0",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "particle-waypoint": "MasatoMakino/particle-waypoint"
  },
  "peerDependencies": {
    "three": ">=0.126.0 <1.0.0"
  },
  "scripts": {
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run demo & npm run buildTS",
    "demo": "npx gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1280\" height=\"768\"></canvas>'",
    "buildTS": "npx tsc --project tsconfig.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
