{
  "name": "@masatomakino/threejs-particle-waypoint",
  "version": "0.7.0",
  "description": "Particle waypoint module for three.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-particle-waypoint.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.7.1",
    "@types/node": "^20.6.2",
    "@types/three": "^0.156.0",
    "browser-sync": "^2.29.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "three": "^0.156.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@masatomakino/particle-waypoint": "^0.7.0"
  },
  "peerDependencies": {
    "three": ">=0.126.0 <1.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1280\" height=\"768\"></canvas>'",
    "buildTS": "tsc --project tsconfig.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync './docs/demo' -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-particle-waypoint/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-particle-waypoint#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
