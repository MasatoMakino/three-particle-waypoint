{
  "name": "threejs-particle-waypoint",
  "version": "0.2.0",
  "description": "Particle waypoint module for three.js",
  "main": "./bin/index.js",
  "types": "./bin/index.d.ts",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/threejs-particle-waypoint.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@types/three": "^0.93.28",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "replace-in-file": "^3.4.4",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "three": "^0.102.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.4000",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "particle-waypoint": "https://github.com/MasatoMakino/particle-waypoint.git"
  },
  "scripts": {
    "build": "npm run prettier:src && tsc && npm run babel && npm run doc",
    "prettier:src": "prettier --write './!(bin|docs)/**/*.{js,ts,json}' ",
    "watch": "npm run watch:tsc | npm run watch:babel | npm run watch:server ",
    "watch:tsc": "tsc -w",
    "babel": "webpack --mode development --module-bind js=babel-loader ./demoSrc/main.js --output ./docs/demo/bundle.js",
    "watch:babel": "npm run babel -- -w",
    "watch:server": "node task/browsersync.js development",
    "server": "node task/browsersync.js production",
    "doc": "npm run doc:generate && npm run doc:replaceNode && npm run doc:card",
    "doc:generate": "typedoc --tsconfig tsdocconfig.json src",
    "doc:replaceNode": "node ./task/replaceAPI.js",
    "doc:card": "repoimg -n MasatoMakino/createjs-particle-waypoint -o ./docs/card.png"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:src && tsc && npm run babel"
    }
  }
}
